<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Streaming</title>
</head>
<body>

<video controls width="600">
    <!-- A URL do vídeo será adicionada aqui -->
</video>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const videoElement = document.querySelector('video');

        // Substitua a URL abaixo pela rota do seu servidor que fornece o vídeo
        const videoUrl = '/video';

        fetch(videoUrl)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Erro ao carregar o vídeo: ${response.status}`);
                }

                return response.blob();
            })
            .then(blob => {
                const videoBlob = URL.createObjectURL(blob);
                videoElement.src = videoBlob;
            })
            .catch(error => console.error(error));
    });
</script>

</body>
</html>
